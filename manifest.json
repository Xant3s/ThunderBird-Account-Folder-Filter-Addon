{
    "manifest_version": 2,
    "name": "Accounts Folder Filter",
    "description": "Accounts folder filter",
    "version": "0.1.0",
    "author": "Samuel Truman",
    "developer": {
        "name": "Samuel Truman",
        "url": "https://samueltruman.com"
    },
    "applications": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_popup": "mainPopup/popup.html",
        "default_title": "Accounts",
        "default_icon": "images/internet-32px.png"
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "storage",
        "menus",
        "notifications"
    ],
    "experiment_apis": {
        "AccountsFolderFilter": {
            "schema": "schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    [
                        "AccountsFolderFilter"
                    ]
                ],
                "script": "implementation.js"
            }
        }
    },
    "background": {
        "page": "background.html"
    },
    "icons": {
        "64": "images/internet.png",
        "32": "images/internet-32px.png",
        "16": "images/internet-16px.png"
    }
}
